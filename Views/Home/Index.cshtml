@{
    ViewData["Title"] = "Home Page";
}

@model IndexViewModel

<br />
<h2 class="text-center">@Model.TeamName</h2>
<br />

@foreach (var x in Model.Bowler)
{
    <div class ="card card-outline-primary m-1 p-1 card bg-light mb-3">
        <p>@x.BowlerFirstName @x.BowlerMiddleInit @x.BowlerLastName</p>
        <div class="text-muted">
            <p>@x.BowlerAddress, @x.BowlerCity, @x.BowlerState @x.BowlerZip</p>
            <p>@x.BowlerPhoneNumber</p>
        </div>
     </div>
}

<!-- Builds page navigation menu at bottom -->
<div page-info="@Model.PageNumberingInfo" page-classes-enabled="true" page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" page-url-team="@Model.TeamName" class="btn-group pull-right m-1">

</div>
